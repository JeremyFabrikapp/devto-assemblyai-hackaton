{
  "name": "Tab Capture - Recorder",
  "description": "Records the current tab in an offscreen document.",
  "version": "1.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/not-recording16.png",
      "48": "icons/not-recording48.png",
      "128": "icons/not-recording128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Start Recording"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": ["tabCapture", "offscreen", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"]
}
