{
  "name": "TranscribeNow - Recorder",
  "description": "Records the current tab audio.",
  "version": "1.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "action": {
    // "default_popup": "popup.html", // Add this to specify your popup
    "default_icon": {
      "16": "icons/not-recording.png",
      "32": "icons/not-recording.png",
      "48": "icons/not-recording.png",
      "128": "icons/not-recording.png"
    }
  },

  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js", "audio.js"]
    }
  ],
  "permissions": [
    "tabs",
    "tabCapture",
    "offscreen",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"]
}
